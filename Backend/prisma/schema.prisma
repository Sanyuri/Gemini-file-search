generator client {
  provider = "prisma-client-js"
  output   = "generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              String @id @default(uuid()) @db.Uuid
  username        String @unique
  email           String @unique
  password        String
  isActive        Boolean @default(true)
  sessionChats    SessionChat[]
  FileSearchStore FileSearchStore[]
  createdAt       DateTime
  updatedAt       DateTime?
  createdBy       String
  updatedBy       String?
  isDeleted       Boolean @default(false)
  deletedAt       DateTime?
  deletedBy       String?
}

model SessionChat {
  id            String @id @default(uuid()) @db.Uuid
  sessionName   String 
  userId        String @default(uuid()) @db.Uuid
  user          User  @relation(fields: [userId], references: [id])
  chatHistory   ChatHistory[]
  createdAt     DateTime
  updatedAt     DateTime?
  createdBy     String
  updatedBy     String?
  isDeleted     Boolean @default(false)
  deletedAt     DateTime?
  deletedBy     String?
}

model ChatHistory  {
  id            String @id @default(uuid()) @db.Uuid
  chatHistory   String @db.Text
  sourceUrls    String? @db.Text
  sessionChatId String @default(uuid()) @db.Uuid
  sessionChat   SessionChat @relation(fields: [sessionChatId], references: [id])
  createdAt     DateTime
  updatedAt     DateTime?
  createdBy     String
  updatedBy     String?
  isDeleted     Boolean @default(false)
  deletedAt     DateTime?
  deletedBy     String?
}

model FileSearchStore {
  id            String @id
  storeName     String
  sizeBytes     String?
  userId        String @default(uuid()) @db.Uuid
  user          User  @relation(fields: [userId], references: [id])
  createdAt     DateTime
  updatedAt     DateTime?
  createdBy     String
  updatedBy     String?
  isDeleted     Boolean @default(false)
  deletedAt     DateTime?
  deletedBy     String?
}
